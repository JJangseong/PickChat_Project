<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#eee"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="1dp"
                android:background="#fff"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/soloimg"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"

                    />

                <LinearLayout

                    android:layout_width="274dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@+id/soloimg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/usernickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="유저 닉네임"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/bbsdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="글쓴날"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="14dp" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>


        <ImageView
            android:id="@+id/readImg"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:adjustViewBounds="true"
            android:background="#FAB7B7" />


        <TextView
            android:id="@+id/bbsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="제            목"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/bbsContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="내       용"
            android:textSize="15dp" />


        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/readImg"
            android:layout_alignParentBottom="@id/readImg"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/readHeart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/heart" />

            <ImageView
                android:id="@+id/imgContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/speak" />

            <TextView
                android:id="@+id/readTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="#해시태크1"
                android:textSize="15dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtReply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:imeOptions="actionDone"
            android:hint="입력" />

        <ImageView
            android:id="@+id/replySend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/edtReply"
            android:layout_weight="7"
            android:src="@drawable/ic_send_black_24dp" />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/contentList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>




