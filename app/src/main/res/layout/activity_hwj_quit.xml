<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff006c"
    tools:context=".HWJ_QuitActivity">

    <TextView
        android:id="@+id/txt"
        android:padding="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원님,\n만족스러운 서비스를 제공하지 못해 죄송합니다.\n\n어플 사용시 어떤 점이 불편했는지 알려주시면, 다음에 찾아주시기전까지 개선을 위해서 노력하겠습니다. "
        android:textColor="#000000"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/edt_txt"
        android:padding="15sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_below="@id/txt"
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:gravity="top"
        android:background="@drawable/background_rounding_white"
        android:hint="픽챗을 사용하면서 불편한 점을 꼭 적어주세요."/>

    <Button
        android:id="@+id/btn_point"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:padding="10sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginTop="30sp"
        android:layout_below="@id/edt_txt"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_rounding_white"
        android:textSize="20sp"
        android:text="포인트 받고 돌아가기(100p)"/>

    <RelativeLayout
        android:layout_marginBottom="20sp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/quit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="탈퇴하기"
            android:textSize="15sp"
            android:textColor="#808080"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_right"
            android:layout_toRightOf="@id/quit"/>
    </RelativeLayout>
</RelativeLayout>