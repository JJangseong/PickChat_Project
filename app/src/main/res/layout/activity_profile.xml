<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="10dp"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp">


                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:onClick="mClick"
                    android:background="@drawable/imgplus"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_camera"/>

                <ImageView
                    android:id="@+id/image2"
                    android:layout_marginLeft="20dp"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:onClick="mClick"
                    android:background="@drawable/imgplus"

                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_camera"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:paddingLeft="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_error2"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="첫번째 사진은 실물인증을 위한 사진입니다."
                    android:textColor="#A074FF"
                    android:textSize="13sp"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="0px"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="사진공개 / 비공개"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:textSize="15sp" />


                <RadioGroup
                    android:id="@+id/Radiobutton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_marginRight="10sp"
                    android:layout_height="wrap_content"
                    android:checkedButton="@+id/male"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp">

                    <RadioButton
                        android:id="@+id/op"
                        android:textSize="13dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="공개" />

                    <RadioButton
                        android:id="@+id/no"
                        android:textSize="13dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="비공개" />
                </RadioGroup>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp">



            <EditText
                android:id="@+id/userid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textSize="15sp"
                android:hint="아이디(핸드폰)" />


            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="10sp"
                android:hint="이름" />


            <EditText
                android:id="@+id/userpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:hint="비밀번호"/>

            <TextView
                android:id="@+id/passtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호는 4자리 이상 입력해주세요."
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                android:textColor="#F10000"
                android:visibility="gone"/>


            <EditText
                android:id="@+id/userpasswordtest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:textSize="15sp"
                android:hint="비밀번호 재입력"/>
            <TextView
                android:id="@+id/passTestText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="입력이 올바르지않습니다."
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                android:textColor="#F10000"
                android:visibility="gone"/>



            <EditText
                android:id="@+id/usernickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:hint="닉네임"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/nicknameText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용할수 있는 닉네임 입니다."
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                android:textColor="#2E703D"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/nicknameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이미 사용중인 닉네임 입니다."
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                android:textColor="#F10000"
                android:visibility="gone"/>









            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1."
                    android:layout_height="wrap_content"
                    android:text="성별"
                    android:textColor="#000000" />


                <RadioGroup
                    android:id="@+id/Radio"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:checkedButton="@+id/male"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp">

                    <RadioButton
                        android:id="@+id/gendercode1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="남자" />

                    <RadioButton
                        android:id="@+id/gendercode2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="여자" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:id="@+id/localcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:hint="지역선택"
                android:paddingBottom="8dp"
                android:layout_marginLeft="2dp"
                android:textSize="15sp"
                android:background="@drawable/tedori2"/>


            <EditText
                android:id="@+id/userage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:hint="나이"
                android:textSize="15sp"/>


            <TextView
                android:id="@+id/userjob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="직업"
                android:paddingBottom="8dp"
                android:layout_marginLeft="2dp"
                android:textSize="15sp"
                android:background="@drawable/tedori2"/>


            <TextView
                android:id="@+id/userheight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="키"
                android:paddingBottom="8dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:background="@drawable/tedori2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20sp"
            android:layout_height="120dp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/gg">

            <EditText
                android:id="@+id/usercomment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint=" 자기소개"
                android:paddingLeft="3sp"
                android:paddingTop="3sp"
                android:paddingRight="3sp" />

        </LinearLayout>

        <Button
            android:id="@+id/insertbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="다 음"
            android:layout_marginTop="20sp"/>
    </LinearLayout>
</ScrollView>